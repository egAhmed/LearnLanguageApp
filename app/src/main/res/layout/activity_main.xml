<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                style="@style/StylTabLayoutu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/barva_pozadi_tab_layoutu"
                app:tabMode="scrollable" />


            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />


        </LinearLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/hlavicka_drawer"
            app:itemIconTint="@color/barva_ikon_navigation_view"
            app:itemTextColor="@color/barva_textu_navigation_view"
            app:menu="@menu/drawer_menu" />


    </android.support.v4.widget.DrawerLayout>

</LinearLayout>