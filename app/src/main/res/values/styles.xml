<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ZeleneTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ModreTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/modra</item>
        <item name="colorPrimaryDark">@color/tmaveModra</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="colorAccent">@color/modra</item>
    </style>

    <style name="CerveneTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cervena</item>
        <item name="colorPrimaryDark">@color/tmaveCervena</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="colorAccent">@color/cervena</item>
    </style>

    <style name="OranzoveTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/oranzova</item>
        <item name="colorPrimaryDark">@color/tmaveOranzova</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="colorAccent">@color/oranzova</item>
    </style>

    <style name="FialoveTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fialova</item>
        <item name="colorPrimaryDark">@color/tmaveFialova</item>
        <item name="actionBarStyle">@style/AppBarStyle</item>
        <item name="colorAccent">@color/fialova</item>
    </style>




    <!-- styl AppBaru - to je ten velkej šit nahoře s názvem aplikace, jak mi nešel dát pryč -->
    <style name="AppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- pro vymazání takovýho stínu pod appbarem- mezi AppBarem a TabLayoutem -->
        <item name="elevation">0dp</item>
    </style>


    <!-- styl TabLayoutu -->
    <style name="StylTabLayoutu" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>
    <!-- podstyl TabLayoutu pro vzhled textu tabů -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/barva_textu_neaktivniho_tabu</item>
    </style>

    <!-- styl textu v info aktivitě -->
    <style name="StylTextuInfoActivity">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <!-- styl textu v navigation headeru -->
    <style name="StylTextuNavigationHeader">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


</resources>
